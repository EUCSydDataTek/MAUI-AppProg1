<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppProg1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:AppProg1.Converters">

    <ContentPage.Resources>
        <converters:IntToBoolConverter x:Key="intToBool" />
    </ContentPage.Resources>

    <StackLayout Padding="10,0">
        <Entry
            x:Name="entry1"
            Placeholder="enter search term"
            Text=""
            VerticalOptions="Center" />
        <Button
            HorizontalOptions="Center"
            IsEnabled="{Binding Source={x:Reference entry1}, Path=Text.Length, Converter={StaticResource intToBool}}"
            Text="Search"
            VerticalOptions="Center" />
        
        <Entry
            x:Name="entry2"
            Placeholder="enter destination"
            Text=""
            VerticalOptions="Center" />
        <Button
            HorizontalOptions="Center"
            IsEnabled="{Binding Source={x:Reference entry2}, Path=Text.Length, Converter={StaticResource intToBool}}"
            Text="Submit"
            VerticalOptions="Center" />
    </StackLayout>

</ContentPage>
