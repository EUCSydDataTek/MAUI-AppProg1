<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppProg1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Basic Grid demo">

    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="6"
        RowDefinitions="2*,*,100"
        RowSpacing="6">
        <BoxView Color="Green" />
        <Label
            HorizontalOptions="Center"
            Text="Row 0, Column 0"
            VerticalOptions="Center" />
        <BoxView Grid.Column="1" Color="Blue" />
        <Label
            Grid.Column="1"
            HorizontalOptions="Center"
            Text="Row 0, Column 1"
            VerticalOptions="Center" />
        <BoxView Grid.Row="1" Color="Teal" />
        <Label
            Grid.Row="1"
            HorizontalOptions="Center"
            Text="Row 1, Column 0"
            VerticalOptions="Center" />
        <BoxView
            Grid.Row="1"
            Grid.Column="1"
            Color="Purple" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalOptions="Center"
            Text="Row1, Column 1"
            VerticalOptions="Center" />
        <BoxView
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Color="Red" />
        <Label
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="Center"
            Text="Row 2, Columns 0 and 1"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>