<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppProg1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Husk: HasUnevenRows="True"  -->

    <TableView HasUnevenRows="True" Intent="Settings">
        <TableRoot>
            <TableSection Title="Modes">
                <SwitchCell On="False" Text="Airplane Mode" />
                <SwitchCell On="True" Text="Notifications" />
            </TableSection>
            <TableSection Title="Security">
                <EntryCell Label="Login" Placeholder="username" />
                <EntryCell Label="Password" Placeholder="password" />
            </TableSection>
            <TableSection Title="Silent">
                <ViewCell>
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                        <Label Margin="10,10,0,0" Text="Vibrate" />
                        <Switch Grid.Column="1" HorizontalOptions="End" />
                        <Slider
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="10"
                            Maximum="10"
                            Minimum="0"
                            Value="3" />
                    </Grid>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>
