<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppProg1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="VerticalStacklayout Alignment">

    <!--  5. Sætter man VerticalOptions på selve VerticalStackLayout, vil det have indflydelse på indholdets placering på siden  -->
    <VerticalStackLayout Padding="10" Spacing="30">

        <!--  1. Default fylder en kontrol hele bredden af containeren (HorizontalOptions="Fill") og centrerer sit indhold  -->
        <Button Text="Default Width and HorizontalOption" />

        <!--  2. Når der sættes en WidthRequest på en kontrol, så fylder den kun den angivne bredde  -->
        <Button Text="Default HorizontalOption" WidthRequest="100" />

        <!--  3. HorizontalOptions kan bruges til at styre hvordan en kontrol placeres i forhold til containeren  -->
        <Button
            HorizontalOptions="Start"
            Text="Start"
            WidthRequest="100" />
        <Button
            HorizontalOptions="Center"
            Text="Center"
            WidthRequest="100" />
        <Button
            HorizontalOptions="End"
            Text="End"
            WidthRequest="100" />

        <!--  4. VerticalOptions har ingen effekt på et VerticalStackPanel og bør undgås  -->
        <Button
            Text="End"
            VerticalOptions="End"
            WidthRequest="100" />

    </VerticalStackLayout>

</ContentPage>
